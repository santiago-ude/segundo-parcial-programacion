import java.util.Scanner;
import java.util.TreeSet;


//CREAR,BUSCAR Y ELIMINAR PASAJEROS x nombre y nro de pasaporte

public class gestionPasajeros{

      TreeSet<Pasajero> pasajeros;

    public gestionPasajeros() {

        pasajeros = new TreeSet<>();
    }

    public Pasajero crearPasajero(){

        Pasajero pasajero;
        Scanner scanner = new Scanner(System.in);

        System.out.println("Nombre completo pasajero: ");
        String nombre = scanner.nextLine();

        System.out.println("Nro pasaporte del pasajero: ");
        Double nroPasaporte = scanner.nextDouble();

        pasajero = new Pasajero(nombre,nroPasaporte);


        return pasajero;
    }

    public Pasajero buscarPasajero(){


        Pasajero pasajero = null;
        Double nroPasajeroBuscado;

        Scanner scanner = new Scanner(System.in);

        System.out.println("Nro del pasajero buscado: ");
        nroPasajeroBuscado = scanner.nextDouble();

        for (Pasajero pasajero1 : pasajeros) {

            if(pasajero1.getNroPasaporte() == nroPasajeroBuscado){

                pasajero = pasajero1;
                break;
            }
        }

        return pasajero;
    }


}
